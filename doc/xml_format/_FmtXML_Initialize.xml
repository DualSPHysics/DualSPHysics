<!-- *** Initialize examples for boundary normals using mDBC *** -->
<special>
	<initialize>
		<boundnormal_set mkbound="1">
			<normal x="1" y="0" z="0" />
		</boundnormal_set>
		<boundnormal_plane mkbound="2">
			<point x="1" y="0" z="0" />
			<normal x="1" y="0" z="0" />
			<maxdisth v="2.0" comment="Maximum distance to boundary limit. It uses H*maxdisth (default=2)" />		
		</boundnormal_plane>
		<boundnormal_plane mkbound="2">
			<point auto="true" comment="Point is calculated automatically accoding to normal configuration." />
			<limitdist vdp="0.5" comment="Minimun distance (Dp*vdp) between particles and boundary limit to calculate the point (default=0.5)" />
			<normal x="1" y="0" z="0" />
			<maxdisth v="2.0" comment="Maximum distance to boundary limit. It uses H*maxdisth (default=2)" />		
			<!-- Examples by execution parameters: -->
			<!--  -initnorpla:mkbound=10:normal=1:0:0 -->
			<!--  -initnorpla:mkbound=10:point=auto:normal=1:0:0:limitdist=0.5:maxdisth=2 -->
			<!--  -initnorpla:mkbound=5-7,10:point=0.1:0:0.2:normal=1:0:0 -->
			<!--  -initnorpla:mkbound=0:normal=0:0:1:posmin=0.5:-1:-1:posmax=1.5:1:1 -->
		</boundnormal_plane>
		<boundnormal_sphere mkbound="3">
			<center x="1" y="0" z="0" /> 
			<radius v="1" />
			<inside v="true" comment="Boundary particles inside the sphere" />		
			<maxdisth v="2.0" comment="Maximum distance to boundary limit. It uses H*maxdisth (default=2)" />		
		</boundnormal_sphere>
		<boundnormal_cylinder mkbound="4">
			<center1 x="1" y="0" z="0" /> 
			<center2 x="2" y="0" z="0" /> 
			<radius v="1" />
			<inside v="true" comment="Boundary particles inside the cylinder" />		
			<maxdisth v="2.0" comment="Maximum distance to boundary limit. It uses H*maxdisth (default=2)" />		
		</boundnormal_cylinder>
		<boundnormal_parts mkbound="2">
			<maxdisth v="2.0" comment="Maximum distance to boundary limit. It uses H*maxdisth (default=2)" />
			<!-- Examples by execution parameters: -->
			<!--  -initnorpart:mkbound=10 -->
			<!--  -initnorpart:mkbound=5-7,10:maxdisth=2 -->
			<!--  -initnorpart:mkbound=0:posmax=1.5:1:1 -->
		</boundnormal_parts>
	</initialize>
</special>

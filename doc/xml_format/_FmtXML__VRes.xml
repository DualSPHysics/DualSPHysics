<!-- *** GenCase v5.4.353 (11-12-2024) *** -->
<!-- *** Variable resolution (VRes) template *** -->
<!------------------------------------------------------------------------------->
<!------------------------------------------------------------------------------->
<!-- Example for several independent buffer zones.                             -->
<!------------------------------------------------------------------------------->
<casedef>
	<vres active="true">
		<buffsizeh v="2" comment="Buffer size according to H (H*v) (default v=2)" />
		<!-- Defines a buffer zone as a box in 3D (or rectangle in 2D) -->
		<bufferbox active="true">
			<point x="3" y="0" z="-0.25" />
			<size x="1.5" y="0" z="0.75" />
			<dpratio v="2.0" comment="Refinement ratio" />
		</bufferbox>
		<!-- Defines other buffer box using using the end position instead of the size -->
		<bufferbox>
			<point x="3" y="0" z="-0.25" />
			<endpoint x="4.5" y="0" z="0.5" />
			<dpratio v="2.0" comment="Refinement ratio" />
			<buffsizeh v="3" comment="Buffer size according to H (H*v) (default v=2)" />
		</bufferbox>
	</vres>
</casedef>
<!------------------------------------------------------------------------------->
<!-- Example for more than 2 levels of resolution.                             -->
<!------------------------------------------------------------------------------->
<casedef>
	<vres>
		<bufferbox>
			<point x="-0.30" y="0" z="-0.51" />
			<size x="1.5" y="0.0" z="1" />
			<dpratio v="2.0" comment="Refinement ratio"/>
			<bufferbox>
				<point x="-0.10" y="0" z="-0.250"/>
				<size x="0.75" y="0.0" z="0.5" />
				<dpratio v="2.0" comment="Refinement ratio"/>
			</bufferbox>
		</bufferbox>
	</vres>
</casedef>
<!------------------------------------------------------------------------------->
<!-- Example for overlapping between sub-domain and parent domain.             -->
<!------------------------------------------------------------------------------->
<casedef>
	<vres>
		<bufferbox>
			<point x="-0.30" y="0" z="-0.51" />
			<size x="1.5" y="0.0" z="1" />
			<dpratio v="2.0" comment="Refinement ratio"/>
			<overlappingh v="2.5" comment="Overlapping size according to H (H*v) (default v=0)" />
		</bufferbox>
	</vres>
</casedef>
<!------------------------------------------------------------------------------->
<!-- Example for buffer zone tracking the movement of a moving or floating     -->
<!-- object.                                                                   -->
<!-- The use of useparent="true" in <simulationdomain> allows the final        -->
<!-- simulation domain to be calculated from the domain of the particles       -->
<!-- generated by the parent domain.                                           -->
<!------------------------------------------------------------------------------->
<casedef>
	<vres>
		<bufferbox>
			<point x="-0.30" y="0" z="-0.51" />
			<size x="1.5" y="0.0" z="1" />
			<dpratio value="2.0" comment="Refinement ratio"/>
			<bufferbox>
				<point x="-0.10" y="0" z="-0.250"/>
				<size x="0.75" y="0.0" z="0.5" />
				<dpratio v="2.0" comment="Refinement ratio"/>
				<tracking mkbound="1" comment="Reference to moving or floating object inside refinement region"/>
				<simulationdomain useparent="false" comment="Defines an specific domain of simulation for current subdomain">
					<posmin x="default - 25%" y="default" z="default - 10%" />
					<posmax x="default + 25%" y="default" z="default + 10%" />
				</simulationdomain>
			</bufferbox>
		</bufferbox>
	</vres>
</casedef>



